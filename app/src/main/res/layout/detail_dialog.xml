<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/imv_avatar_detaildialog"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_direction"
                    android:id="@+id/direct_detail"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="30dp"/>
                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_browser"
                    android:id="@+id/brower_detail"
                    android:scaleType="centerCrop"/>
                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_dial"
                    android:scaleType="centerCrop"
                    android:id="@+id/dial_detail"
                    android:layout_marginLeft="30dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text=""
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/tv_name_detaildialog"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="17dp"
            android:id="@+id/tv_address_detaildialog"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_des_detaildialog"
            android:text=""
            android:textSize="17dp"
            android:layout_marginTop="10dp"/>
</LinearLayout>
